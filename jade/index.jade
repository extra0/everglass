extends _layout
block append head
	meta(description="")
	meta(keywords="")
	title Главная страница
block content
	// слайдер 
	.slider
		ul.slider__list
			// слайд
			li.slider__list-item.active.dots-bg
				// видео
				video.slider__list-video(loop autoplay muted poster="/img/sl-bg-1.png")
					source(src="video/video2.mp4" type="video/mp4")
					source(src="video/video2.webm" type="video/webm")
					source(src="video/video2.ogg" type="video/ogg")
				// конец видео
				// описание на 1-м слайде
				.container
					.slider__description.text-center
						.slider__description-title
							h2.title Everglass detailing
							p.slider__description-title-text Лучшее или ничего
						.slider__description-text-block.block-top-left-triangle.bottom-red-line
							p.slider__description-text Защитные покрытия эвергласс могут наноситься на автомобиль с применением технологии сращивания слоёв,то есть говоря простым языком мы обрабатываем автомобиль нескольо раз составом Everglass Platinum Procoat а затем наносим финишный слой Everglass Topcoat. Данная технология обработки автомобиля позволяет увеличить твёрдость заводского ЛКП до 9H по шкале Мосса.
							.text-right
								a.btn(href="#!") О компании
				// конец описания
			// конец слайда
			li.slider__list-item.dots-bg(style="background: #000 url(img/sl-bg-1.png) 0 0 no-repeat;")
				.container
					// блок с превью товара
					.slider__product-preview.bg-style-1.visible-lg
						img.slider__product-preview-img(src="img/content/botel.png", alt="")
						p.slider__product-preview-name Уход за кузовом
						p.slider__product-preview-description Последнее слово в защите лакокрасочного покрытия автомобиля
					// конец блок с превью товара
					// блок со списком товаров
					.slider__product-list-block
						h2.title.text-center Уход за Кузовом
						block product
							ul.slider__product-list
								- for (i=1; i<6; i++) {
									li.slider__product-list-item
										.slider__product-list-img-wrap
											a(href="#!")
												img.slider__product-list-img(src="img/content/product.png", alt="")
										.slider__product-list-description-wrap
											p.slider__product-list-description-name Platinum
											p.slider__product-list-description-text Последнее слово в защите лакокрасочного покрытия автомобиля
											a.slider__product-list-description-link(href="#!") Подробнее
								- }
					// конец блок со списком товаров
			li.slider__list-item.dots-bg(style="background: #000 url(img/sl-bg-2.png) 0 0 no-repeat;")
				.container
					.slider__product-preview.bg-style-2.visible-lg
						img.slider__product-preview-img(src="img/content/botel-2.png", alt="")
						p.slider__product-preview-name Уход за салоном
						p.slider__product-preview-description Последнее слово в защите лакокрасочного покрытия автомобиля
					.slider__product-list-block
						h2.title.text-center Уход за Салоном
						block product